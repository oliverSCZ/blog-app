<main>
<h1 class="font-bold w-full text-center m-5">USERS</h1><br>
<div class="container w-11/12 mx-auto">
    <% @users.each do |user| %>   
      <div class="user-card flex"> 
      <div class="user-photo border-2 w-36 h-24 mx-5"></div>
      <div class="border-2 w-full flex items-center content-center flex-wrap">
      <div class="text-3xl ml-5 w-full"><%= link_to user_path(user) do %></div>

          <%= render partial: "user", locals: {user: user} %>
          
        <% end %>
        
        </div>
        </div><br>
    <% end %> 
 </div>
</main>